{
  "manifest_version": 3,
  "name": "Visual Memory Level Selector",
  "version": "1.0.0",
  "description": "Practice the Human Benchmark Visual Memory Test at any level with optional unlimited lives",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://humanbenchmark.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://humanbenchmark.com/tests/memory"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Visual Memory Settings"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://humanbenchmark.com/*"]
    }
  ]
}